{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl" : "./",
    "paths": {
      "@src/*": ["src/*"],
      "@FormComponents/*": ["src/components/FormComponent/*"],
      "@TextComponents/*": ["src/components/TextComponent/*"],
      "@Utils/*": ["src/utils/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "noEmitOnError": false,
    "strict": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationDir": "src/types"
  },
  "watchOptions": {
    // Use native file system events for files and directories
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    // Don't coalesce watch notification
    "synchronousWatchDirectory": true
  },
  "files": [
    "./src/main.ts",
    "./src/utils/utils.ts",
    "./src/components/FormComponent/form.ts",
    "./src/components/TextComponent/input.ts"
  ]
}
